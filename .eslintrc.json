{
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "never"
    ],
    "arrow-parens": [
      2,
      "as-needed"
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  }
}
